                <script>
                    // Get the modal
                    var analitbirimmodal = document.getElementById("analitbirimmodal");
                    var analitkitmodal = document.getElementById("analitkitmodal");
                 
                    // Get the button that opens the modal

                    var analitbirimbutton = document.getElementById("analitbirimbutton");
                    var analitkitbutton = document.getElementById("analitkitbutton");

                    // Get the <span> element that closes the modal

                    var analitbirimspan = document.getElementsByClassName("analitbirimclose")[0];
                    var analitkitspan = document.getElementsByClassName("analitkitclose")[0];
               
                    // When the user clicks the button, open the modal 

                    analitbirimbutton.onclick = function () {
                        analitbirimmodal.style.display = "block";
                    }
                    analitkitbutton.onclick = function () {
                        analitkitmodal.style.display = "block";
                    }



                    // When the user clicks on <span> (x), close the modal
                        analitbirimspan.onclick = function () {
                            analitbirimmodal.style.display = "none";
                    }

                    analitkitspan.onclick = function () {
                        analitkitbutton.style.display = "none";
                    }
                 


                    // When the user clicks anywhere outside of the modal, close it
                    window.onclick = function (event) {
                        if (event.target == analitbirimmodal) {
                            analitbirimmodal.style.display = "none";
                        }
                    }

                    window.onclick = function (event) {
                        if (event.target == analitkitmodal) {
