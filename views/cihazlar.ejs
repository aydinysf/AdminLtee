                    var cihazmodelbutton=document.getElementById("cihazmodelbutton");
                    var cihazkitleributton=document.getElementById("cihazkitleributton");
                    // Get the <span> element that closes the modal
 
                    var cihazmodelspan = document.getElementsByClassName("cihazmodelclose")[0];
                    var cihazkitlerispan = document.getElementsByClassName("cihazkitlericlose")[0];   
                    // When the user clicks the button, open the modal 
              
